                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_edit_bg"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Deduction"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/edit_munsiyana"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/edit_advance"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_edit_bg"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Munsiyana"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="@dimen/medium_text_size" />


                <TextView
                    android:id="@+id/edit_commision"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_edit_bg"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Commision"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/edit_other"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/edit_advance"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_edit_bg"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Other"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="@dimen/medium_text_size" />



                <TextView
                    android:id="@+id/edit_is_status"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_edit_bg"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Complete"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/edit_party"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/edit_advance"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_edit_bg"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Party Name"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="@dimen/medium_text_size" />
