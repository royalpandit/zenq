<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/buttoncolor1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/addcard_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="@dimen/card_album_radius"

        card_view:cardElevation="10dp"
        card_view:contentPadding="1dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/toppalace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tv_driver_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Date : 12-11-2019"
                    android:textColor="@color/buttoncolor1"
                    android:textSize="@dimen/medium_text_size" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/img_driv_card"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/tv_driver_date"
                    android:background="@color/black"
                    android:shape="ring"
                    card_view:cardCornerRadius="19dp"
                    card_view:cardElevation="1dp"
                    card_view:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/img_truck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logoo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvf_own_truck_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_driver_date"
                    android:layout_marginLeft="8dp"
                     android:layout_toRightOf="@+id/img_driv_card"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Rj14-52-dfsd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/tvf_own_truck_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvf_own_truck_no"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_driv_card"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Reg Valid"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/tvf_own_truck_permit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvf_own_truck_valid"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_driv_card"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Permit Valid"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size" />


                <TextView
                    android:id="@+id/tvf_own_truck_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvf_own_truck_permit"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/img_driv_card"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Approved"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size" />
                <Button
                    android:id="@+id/btn_view"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/tvf_own_truck_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                     android:background="@color/buttoncolor1"
                    android:fontFamily="@font/opensans_regular"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>