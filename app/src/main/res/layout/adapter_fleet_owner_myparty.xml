<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/buttoncolor1">

    <androidx.cardview.widget.CardView
        android:id="@+id/addcard_myarty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="@dimen/card_album_radius"

        card_view:cardElevation="10dp"
        card_view:contentPadding="1dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/toppalace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tv_party_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Date : 12-11-2019"
                    android:textColor="@color/buttoncolor1"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/tvf_party_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_party_create_date"
                    android:layout_marginLeft="8dp"
                     android:fontFamily="@font/opensans_regular"
                    android:text="@string/companny"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/tvf_party_conatct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvf_party_company"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                     android:fontFamily="@font/opensans_regular"
                    android:text="@string/con_person"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size" />


                <TextView
                    android:id="@+id/tvf_party_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvf_party_conatct"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                     android:fontFamily="@font/opensans_regular"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size" />




                <Button
                    android:id="@+id/btn_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvf_party_conatct"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:background="@color/buttoncolor1"
                    android:fontFamily="@font/opensans_regular"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>