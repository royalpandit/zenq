<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/getuseradaptercardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/useradaptercardview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                card_view:cardCornerRadius="@dimen/card_album_radius">

                <ImageView
                    android:id="@+id/user_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                     android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/useradaptercardview"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center_vertical"
                android:text="Role"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_usertype"
                android:layout_below="@+id/tv_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/useradaptercardview"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center_vertical"
                android:text="USER"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_email"
                android:layout_below="@+id/tv_usertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/useradaptercardview"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center_vertical"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="13dp" />
<Button
    android:id="@+id/btn_kycverify"
    android:layout_below="@+id/tv_email"
    android:text="KYC"
      android:textAllCaps="false"
    android:textColor="@color/white"
    android:layout_alignParentRight="true"
    android:background="@color/colororange"
    android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>