<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackreg">
    <ImageView
        android:id="@+id/back"
        android:layout_margin="15dp"
        android:src="@drawable/ic_left_black_24dp"
        android:layout_width="32dp"
        android:layout_height="32dp"/>
    <LinearLayout
        android:layout_below="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/sent_otp"
                android:textColor="@color/buttoncolor1"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/signup_give_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/digit_proceed"
                android:textColor="@color/colorWhiteLight"
                android:textSize="@dimen/medim_large_text" />


            <EditText
                android:id="@+id/editemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:backgroundTint="@color/buttoncolor"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center_vertical"
                android:hint="OTP"
                android:inputType="number"
                android:textColor="@color/buttoncolor"
                android:textColorHint="@color/colorWhiteLight"
                android:textSize="@dimen/large_text_size" />



            <Button
                android:id="@+id/btn_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="135dp"
                android:background="@drawable/registerbutton"
                android:fontFamily="@font/opensans_regular"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/medim_large_text" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>