<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackreg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/text_sign_up"
                android:textColor="@color/buttoncolor1"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/signup_give_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/giveeus"
                android:textColor="@color/buttoncolor1"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/mobile_give_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/text_linkedacc"
                android:textColor="@color/colorWhiteLight"
                android:textSize="@dimen/medim_large_text" />


            <EditText
                android:id="@+id/editemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"

                android:backgroundTint="@color/buttoncolor"

                android:fontFamily="@font/opensans_regular"
                android:gravity="center_vertical"
                android:hint="9999999999"
                android:inputType="number"
                android:textColor="@color/buttoncolor"
                android:textColorHint="@color/colorWhiteLight"
                android:textSize="@dimen/large_text_size" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            app:cardBackgroundColor="@color/black_metarial"
            card_view:cardCornerRadius="25dp"
            card_view:contentPadding="10dp"
            card_view:cardElevation="8dp">



            <Button
                android:id="@+id/btn_sign"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@+id/editdob"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/registerbutton"
                android:fontFamily="@font/opensans_regular"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text_size" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>